<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<g:HTMLPanel>
	    <b:FluidContainer>
			<b:FluidRow>
				<b:Column size="2">
				   <b:Row>
				       <b:Column size="1">
				       </b:Column>
				   		<b:Column ui:field="categoryList" size="11">
				   		    <b:Heading size="4" text="Categories"></b:Heading>
				    	</b:Column>
				    </b:Row>
				</b:Column>
				<b:Column size="10">
				    <b:Hero>
				    <b:Heading size="2">Welcome to our awesome webshop!</b:Heading>
				    <b:Paragraph>Pick a category in the menu to the left</b:Paragraph>
				    </b:Hero>
				</b:Column>
			</b:FluidRow>
		</b:FluidContainer>
	</g:HTMLPanel>
</ui:UiBinder> 