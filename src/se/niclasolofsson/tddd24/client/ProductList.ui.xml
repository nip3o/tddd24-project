<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<g:HTMLPanel>
	    <b:FluidContainer>
			<b:FluidRow>
				<b:Column size="2">
				   <b:Heading size="4" text="Categories"></b:Heading>
				   <b:FluidRow>
				   		<b:Column ui:field="categoryList" size="11">
				    	</b:Column>
				    </b:FluidRow>
				    
				   	<b:Heading size="4" text="Shopping cart"></b:Heading>
				    <b:FluidRow>
				   		<b:Column ui:field="shoppingCartList" size="11">
				    	</b:Column>
				    </b:FluidRow>
				    
				    <b:Heading size="4" text="Admin"></b:Heading>
				    <b:FluidRow>
				   		<b:Button ui:field="adminButton">Go to admin</b:Button>
				    </b:FluidRow>
				</b:Column>
				<b:Column ui:field="productList" size="10">
				    <b:Hero>
					    <b:Heading size="2">Welcome to our awesome webshop!</b:Heading>
					    <b:Paragraph>Pick a category in the menu to the left</b:Paragraph>
				    </b:Hero>
				</b:Column>
			</b:FluidRow>
		</b:FluidContainer>
	</g:HTMLPanel>
</ui:UiBinder> 